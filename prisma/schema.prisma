// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model Category {
  id         String   @id @default(cuid())
  name       String
  slug       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Series     Series[]

  @@map("categories")
}

model Series {
  id         String   @id @default(cuid())
  name       String
  slug       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  category_id String
  category    Category   @relation(fields: [category_id], references: [id])
  Products    Products[]

  @@map("series")
}

model Products {
  id         String   @id @default(cuid())
  name       String
  slug       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  series_id String
  series    Series @relation(fields: [series_id], references: [id])

  @@map("products")
}
